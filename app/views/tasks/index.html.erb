<h1 class="my-4 text-center">My Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to task.title, task_path(task), class: "btn btn-link" %>


      <!-- Case à cocher en fonction de l'état de la tâche -->
      <div class="form-check">
        <%= check_box_tag "task[completed]", "true", task.completed, disabled: true, class: "form-check-input" %>
        <label class="form-check-label">
          <%= task.completed ? "Completed" : "Not Completed" %>
        </label>
      </div>

      <div>
        <%= link_to "Delete", task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
      </div>
    </li>
  <% end %>
</ul>

<h2 class="my-4">Options</h2>
<ul class="list-unstyled">
  <li>
    <%= link_to "Add A New Task", new_task_path, class: "btn btn-primary" %>
  </li>
</ul>