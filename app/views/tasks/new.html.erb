<h1 class="text-center mb-4">New Task</h1>

<%= form_with model: @task, class: "mb-4" do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>

  <%= f.submit "Create Task", class: "btn btn-success" %>
<% end %>

<p class="text-center"><%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %></p>